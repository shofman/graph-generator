{
    "extends": ["prettier", "eslint:recommended"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "plugins": ["prettier", "jest"],
    "rules": {
        "prettier/prettier": "error",
        "indent": [
            "error",
            2
        ],
        "no-console": "off",
        "no-debugger": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    },
    "env": {
        "jest/globals": true,
        "es6": true,
        "browser": true,
        "node": true
    }
}
